{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/cyan0013/FIT3179/master/data2020.csv"
  },
  "projection": {"type": "equirectangular"},
  "vconcat": [
    {
      "layer": [
        {
          "selection": {
            "region_highlight": {
              "type": "multi",
              "fields": ["PoliceRegion"],
              "bind": "legend"
            }
          },
          "width": 700,
          "height": 300,
          "mark": {"type": "square"},
          "encoding": {
            "color": {
              "field": "PoliceRegion",
              "title": "Select Police Region:",
              "legend": {"orient": "bottom", "labelFontSize": 12}
            }
          }
        },
        {
          "title": "Rate of Victim Reports in Victoria by LGA per 100,000 Population (2020)",
          "data": {
            "url": "https://raw.githubusercontent.com/cyan0013/FIT3179/master/VIC_LGA_POLYGON_SHP.topojson",
            "format": {"type": "topojson", "feature": "VIC_LGA_POLYGON_SHP"}
          },
          "transform": [
            {
              "lookup": "properties.ABB_NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/cyan0013/FIT3179/master/data2020.csv"
                },
                "key": "LocalGovernmentArea",
                "fields": [
                  "Rateper100,000population",
                  "LocalGovernmentArea",
                  "Victim Reports",
                  "PoliceRegion"
                ]
              }
            }
          ],
          "mark": {"type": "geoshape"},
          "encoding": {
            "color": {
              "title": "Rate",
              "field": "Rateper100,000population",
              "type": "quantitative",
              "scale": {"domain": [0, 8000]},
              "legend": {"orient": "right", "gradientLength": 288}
            },
            "opacity": {
              "condition": {"selection": "region_highlight", "value": 1},
              "value": 0.3
            },
            "tooltip": [
              {
                "field": "LocalGovernmentArea",
                "type": "nominal",
                "title": "Local Government Area"
              },
              {
                "field": "Victim Reports",
                "type": "quantitative",
                "format": ",",
                "title": "Number of Reports"
              },
              {
                "field": "Rateper100,000population",
                "type": "quantitative",
                "format": ",",
                "title": "Rate per 100,000"
              }
            ]
          }
        }
      ]
    },
    {
      "layer": [
        {
          "title": "Average Reports by LGA (2020)",
          "width": 740,
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "LocalGovernmentArea",
              "type": "nominal",
              "sort": "color",
              "title": "Local Government Area",
              "axis": {"labels": false}
            },
            "y": {
              "aggregate": "mean",
              "field": "Victim Reports",
              "type": "quantitative"
            },
            "color": {
              "field": "PoliceRegion",
              "title": "Police Region",
              "scale": {},
              "legend": null
            },
            "tooltip": [
              {
                "field": "LocalGovernmentArea",
                "type": "nominal",
                "title": "Local Government Area"
              },
              {
                "field": "Victim Reports",
                "type": "quantitative",
                "format": ",",
                "title": "Number of Reports"
              },
              {
                "field": "Rateper100,000population",
                "type": "quantitative",
                "format": ",",
                "title": "Rate per 100,000"
              }
            ],
            "opacity": {
              "condition": {"selection": "region_highlight", "value": 1},
              "value": 0.1
            }
          }
        },
        {
          "transform": [{"filter": {"selection": "region_highlight"}}],
          "mark": "rule",
          "encoding": {
            "y": {
              "aggregate": "mean",
              "field": "Victim Reports",
              "type": "quantitative"
            },
            "color": {"value": "firebrick"},
            "size": {"value": 2}
          }
        },
        {
          "mark": {"type": "text", "align": "left"},
          "encoding": {
            "aggregate": "mean",
            "field": "Victim Reports",
            "type": "quantitative"
          },
          "text": {
            "aggregate": "mean",
            "field": "Victim Reports",
            "type": "quantitative"
          }
        }
      ]
    }
  ],
  "config": {}
}