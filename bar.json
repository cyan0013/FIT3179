{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Population Pyramid of Reporters by Age and Gender",
  "data": {
    "url": "https://raw.githubusercontent.com/cyan0013/FIT3179/master/age_gender.csv"
  },
  "params": [
    {
      "name": "offence_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "A Crimes against the person",
          "B Property and deception offences",
          "C Other offences"
        ],
        "labels": [
          "Show All Offences",
          "A: Crimes Against the Person",
          "B: Property and Deception",
          "Other Offences"
        ],
        "name": "Type of Offences: "
      }
    }
  ],
  "transform": [
    {
      "filter": "offence_selection == null || datum.OffenceDivision == offence_selection"
    },
    {"filter": "datum.Year == 2020"},
    {"calculate": "datum.Sex == 'Females' ? 'Female' : 'Male'", "as": "Gender"}
  ],
  "spacing": 0,
  "hconcat": [
    {
      "layer": [
        {
          "width": "container",
          "transform": [{"filter": {"field": "Gender", "equal": "Female"}}],
          "title": "Female",
          "mark": "bar",
          "encoding": {
            "y": {"field": "Age Group", "axis": null, "sort": "descending"},
            "x": {
              "aggregate": "sum",
              "field": "Victim Reports",
              "sort": "descending"
            },
            "color": {
              "field": "Gender",
              "type": "nominal",
              "scale": {"range": ["#9ecae1", "#bcbddc", "pink"]},
              "legend": null
            },
            "tooltip": [
              {"field": "Gender", "type": "nominal"},
              {"field": "Year", "type": "ordinal"},
              {
                "aggregate": "sum",
                "field": "Victim Reports",
                "type": "quantitative",
                "format": ","
              },
              {"field": "Age Group", "type": "ordinal"}
            ]
          }
        },
        {
          "transform": [{"filter": {"field": "Gender", "equal": "Female"}}],
          "mark": {"type": "text", "align": "right", "dx": -5},
          "encoding": {
            "y": {
              "field": "Age Group",
              "title": null,
              "axis": null,
              "sort": "descending"
            },
            "x": {
              "aggregate": "sum",
              "field": "Victim Reports",
              "title": "Victim Reports ",
              "axis": {"format": "s"},
              "scale": {"domain": [0, 35000]}
            },
            "key": {"field": "Age Group"},
            "text": {
              "aggregate": "sum",
              "field": "Victim Reports",
              "type": "ordinal",
              "format": ","
            }
          }
        },
        {
          "width": 35,
          "view": {"stroke": null},
          "mark": {"type": "text", "align": "center", "dx": 230},
          "encoding": {
            "y": {
              "field": "Age Group",
              "type": "ordinal",
              "axis": null,
              "sort": "descending"
            },
            "text": {"field": "Age Group", "type": "ordinal"}
          }
        }
      ]
    },
    {
      "width": 10,
      "view": {"stroke": null},
      "mark": {"type": "text", "align": "center"}
    },
    {
      "layer": [
        {
          "width": "container",
          "transform": [{"filter": {"field": "Gender", "equal": "Male"}}],
          "title": "Male",
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "Age Group",
              "title": null,
              "axis": null,
              "sort": "descending"
            },
            "x": {"aggregate": "sum", "field": "Victim Reports"},
            "color": {"field": "Offence Division", "type": "nominal"},
            "tooltip": [
              {"field": "Gender", "type": "nominal"},
              {
                "aggregate": "sum",
                "field": "Victim Reports",
                "type": "quantitative",
                "format": ","
              },
              {"field": "Age Group", "type": "ordinal"}
            ]
          }
        },
        {
          "transform": [{"filter": {"field": "Gender", "equal": "Male"}}],
          "width": 0,
          "view": {"stroke": "white"},
          "mark": {"type": "text", "align": "left", "dx": 5},
          "encoding": {
            "y": {
              "field": "Age Group",
              "title": null,
              "axis": null,
              "sort": "descending"
            },
            "x": {
              "aggregate": "sum",
              "field": "Victim Reports",
              "title": "Victim Reports ",
              "axis": {"format": "s"},
              "scale": {"domain": [0, 35000]}
            },
            "color": {"field": "Offence Division", "type": "nominal"},
            "key": {"field": "Age Group"},
            "text": {
              "aggregate": "sum",
              "field": "Victim Reports",
              "type": "ordinal",
              "format": ","
            }
          }
        }
      ]
    }
  ],
  "config": {}
}
