{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Victim Reports in Victoria",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cyan0013/FIT3179/master/data2020.csv"
      },
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["PoliceRegion"],
          "bind": "legend"
        }
      },
      "mark": {"type": "rule"},
      "encoding": {"color": {"field": "PoliceRegion"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cyan0013/FIT3179/master/VIC_LGA_POLYGON_SHP.topojson",
        "format": {"type": "topojson", "feature": "VIC_LGA_POLYGON_SHP"}
      },
      "transform": [
        {
          "lookup": "properties.ABB_NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/cyan0013/FIT3179/master/data2020.csv"
            },
            "key": "LocalGovernmentArea",
            "fields": [
              "Rateper100,000population",
              "LocalGovernmentArea",
              "Victim Reports",
              "PoliceRegion"
            ]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "title": "Rate per 100,000",
          "field": "Rateper100,000population",
          "type": "quantitative",
          "scale": {"domain": [0, 8000]}
        },
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {
            "field": "LocalGovernmentArea",
            "type": "nominal",
            "title": "Local Government Area (LGA)"
          }
        ]
      }
    }
  ],
  "config": {}
}